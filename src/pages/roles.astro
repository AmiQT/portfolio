---
import Layout from "../layouts/Layout.astro";

const baseUrl = import.meta.env.BASE_URL;

const roles = [
    {
        id: 'it-support',
        title: 'IT Support Professional',
        description: 'System Administration & Technical Support',
        icon: 'üõ†Ô∏è',
        color: 'blue',
        link: 'home-it-support/',
        features: ['Active Directory', 'Network Admin', 'Hardware Support']
    },
    {
        id: 'software-developer',
        title: 'Software Developer',
        description: 'Full-Stack & Mobile Development',
        icon: 'üíª',
        color: 'green',
        link: 'home-software-developer/',
        features: ['React & Vue.js', 'Node.js & FastAPI', 'Mobile Apps']
    },
    {
        id: 'devops-engineer',
        title: 'DevOps Engineer',
        description: 'Cloud Infrastructure & Automation',
        icon: '‚òÅÔ∏è',
        color: 'emerald',
        link: 'role-devops-engineer/',
        features: ['AWS & Docker', 'CI/CD Pipelines', 'Infrastructure as Code']
    }
];
---

<Layout
    title="Choose Your Profile - Noor Azami Portfolio"
    description="Explore my portfolio through different professional roles"
    canonical="/roles"
>
    <main class="min-h-screen bg-gradient-to-br from-gray-900 via-black to-gray-900 flex items-center justify-center px-4 py-20">
        <div class="max-w-6xl w-full">
            <!-- Header -->
            <div class="text-center mb-16">
                <h1 class="text-5xl md:text-6xl font-bold text-white mb-4">
                    Welcome! üëã
                </h1>
                <p class="text-xl text-gray-300 mb-2">
                    Muhammad Noor Azami (AmiQT)
                </p>
                <p class="text-gray-400">
                    Choose a role to explore my portfolio
                </p>
            </div>

            <!-- Role Cards -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-12">
                {roles.map((role) => (
                    <a
                        href={baseUrl + role.link}
                        class={`group relative bg-gray-900 border-2 border-${role.color}-500/30 rounded-xl p-8 hover:border-${role.color}-500 hover:bg-${role.color}-500/5 transition-all duration-300 hover:scale-105 hover:shadow-2xl hover:shadow-${role.color}-500/20`}
                    >
                        <!-- Accent Line -->
                        <div class={`absolute top-0 left-0 right-0 h-1 bg-gradient-to-r from-${role.color}-500 to-${role.color}-500/50 rounded-t-xl opacity-0 group-hover:opacity-100 transition-opacity`}></div>
                        
                        <!-- Icon -->
                        <div class="text-6xl mb-6 text-center transform group-hover:scale-110 transition-transform">
                            {role.icon}
                        </div>

                        <!-- Content -->
                        <h2 class={`text-2xl font-bold text-white mb-2 text-center group-hover:text-${role.color}-300 transition-colors`}>
                            {role.title}
                        </h2>
                        <p class="text-gray-400 text-center mb-6 text-sm">
                            {role.description}
                        </p>

                        <!-- Features -->
                        <ul class="space-y-2">
                            {role.features.map((feature) => (
                                <li class="flex items-center gap-2 text-gray-300 text-sm">
                                    <span class={`w-1.5 h-1.5 bg-${role.color}-400 rounded-full`}></span>
                                    <span>{feature}</span>
                                </li>
                            ))}
                        </ul>

                        <!-- Arrow -->
                        <div class={`mt-6 text-center text-${role.color}-400 opacity-0 group-hover:opacity-100 transition-opacity`}>
                            <svg class="w-6 h-6 mx-auto animate-bounce" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                            </svg>
                        </div>
                    </a>
                ))}
            </div>

            <!-- Quick Links -->
            <div class="text-center space-x-4">
                <a
                    href={baseUrl + "contact"}
                    class="inline-block px-6 py-3 bg-white/10 hover:bg-white/20 border border-white/30 text-white rounded-lg font-medium transition-all"
                >
                    üìß Contact Me
                </a>
                <a
                    href={baseUrl}
                    class="inline-block px-6 py-3 bg-white/5 hover:bg-white/10 border border-white/20 text-gray-300 rounded-lg font-medium transition-all"
                >
                    ‚Üê Back to Landing
                </a>
            </div>
        </div>
    </main>
</Layout>

<style>
    /* Custom color classes for dynamic colors */
    .border-blue-500\/30 { border-color: rgba(59, 130, 246, 0.3); }
    .border-blue-500 { border-color: rgb(59, 130, 246); }
    .bg-blue-500\/5 { background-color: rgba(59, 130, 246, 0.05); }
    .shadow-blue-500\/20 { --tw-shadow-color: rgba(59, 130, 246, 0.2); }
    .from-blue-500 { --tw-gradient-from: rgb(59, 130, 246); }
    .to-blue-500\/50 { --tw-gradient-to: rgba(59, 130, 246, 0.5); }
    .text-blue-300 { color: rgb(147, 197, 253); }
    .text-blue-400 { color: rgb(96, 165, 250); }
    .bg-blue-400 { background-color: rgb(96, 165, 250); }

    .border-green-500\/30 { border-color: rgba(34, 197, 94, 0.3); }
    .border-green-500 { border-color: rgb(34, 197, 94); }
    .bg-green-500\/5 { background-color: rgba(34, 197, 94, 0.05); }
    .shadow-green-500\/20 { --tw-shadow-color: rgba(34, 197, 94, 0.2); }
    .from-green-500 { --tw-gradient-from: rgb(34, 197, 94); }
    .to-green-500\/50 { --tw-gradient-to: rgba(34, 197, 94, 0.5); }
    .text-green-300 { color: rgb(134, 239, 172); }
    .text-green-400 { color: rgb(74, 222, 128); }
    .bg-green-400 { background-color: rgb(74, 222, 128); }

    .border-emerald-500\/30 { border-color: rgba(16, 185, 129, 0.3); }
    .border-emerald-500 { border-color: rgb(16, 185, 129); }
    .bg-emerald-500\/5 { background-color: rgba(16, 185, 129, 0.05); }
    .shadow-emerald-500\/20 { --tw-shadow-color: rgba(16, 185, 129, 0.2); }
    .from-emerald-500 { --tw-gradient-from: rgb(16, 185, 129); }
    .to-emerald-500\/50 { --tw-gradient-to: rgba(16, 185, 129, 0.5); }
    .text-emerald-300 { color: rgb(110, 231, 183); }
    .text-emerald-400 { color: rgb(52, 211, 153); }
    .bg-emerald-400 { background-color: rgb(52, 211, 153); }
</style>
