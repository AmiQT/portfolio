---

<Layout 
    title="Experience - IT Support - Noor Azami" 
    description="Professional experience and qualifications of Noor Azami in IT Support and leadership roles."
    canonical="/role-it-support/experience"
>
    <Header />
    <ProfileSelector />
    
    <main class="pt-16">
        <!-- Hero Section -->
        <section class="py-24 px-4 sm:px-6 lg:px-8 text-center animated-gradient">
            <div class="container mx-auto max-w-4xl fade-in-scroll">
                <div class="w-20 h-20 mx-auto mb-6 bg-cyan-500/20 rounded-full flex items-center justify-center border border-cyan-500/30">
                    <span class="text-4xl">üíº</span>
                </div>
                <h1 class="text-4xl md:text-5xl font-bold mb-4">Professional Experience</h1>
                <p class="text-lg text-text-secondary max-w-2xl mx-auto">
                    Leadership roles and hands-on experience in IT, event management, and technical support.
                </p>
                <div class="mt-6 flex flex-wrap justify-center gap-3">
                    <span class="px-4 py-2 bg-cyan-500/10 border border-cyan-500/30 rounded-full text-sm text-cyan-400">
                        {experiences.length} Positions
                    </span>
                    <span class="px-4 py-2 bg-cyan-500/10 border border-cyan-500/30 rounded-full text-sm text-cyan-400">
                        2021 - Present
                    </span>
                    <span class="px-4 py-2 bg-cyan-500/10 border border-cyan-500/30 rounded-full text-sm text-cyan-400">
                        Leadership Focus
                    </span>
                </div>
            </div>
        </section>

        <!-- Experience Timeline -->
        <section class="py-16 px-4 sm:px-6 lg:px-8">
            <div class="container mx-auto max-w-4xl">
                <div class="space-y-8">
                    {experiences.map((exp, index) => (
                        <div class="relative pl-8 border-l-2 border-cyan-500/30 fade-in-scroll">
                            <!-- Timeline dot -->
                            <div class="absolute -left-3 top-0 w-6 h-6 bg-cyan-500 rounded-full flex items-center justify-center text-xs">
                                {index + 1}
                            </div>
                            
                            <!-- Card -->
                            <div class="bg-accent-color rounded-xl p-6 border border-cyan-500/20 hover:border-cyan-500/40 transition-all duration-300">
                                <div class="flex items-start gap-4 mb-4">
                                    <div class="w-12 h-12 bg-cyan-500/20 rounded-lg flex items-center justify-center flex-shrink-0">
                                        <span class="text-2xl">{exp.icon}</span>
                                    </div>
                                    <div class="flex-1">
                                        <h3 class="text-xl font-bold text-text-primary mb-1">{exp.title}</h3>
                                        <p class="text-cyan-400 font-medium">{exp.organization}</p>
                                        <p class="text-sm text-text-secondary mt-1">{exp.duration}</p>
                                    </div>
                                </div>
                                
                                <div class="space-y-2 ml-16">
                                    <h4 class="text-sm font-semibold text-text-secondary uppercase tracking-wider">Key Responsibilities</h4>
                                    <ul class="space-y-2">
                                        {exp.responsibilities.map((resp) => (
                                            <li class="flex items-start gap-2 text-text-secondary">
                                                <span class="text-cyan-400 mt-1">‚Ä¢</span>
                                                <span>{resp}</span>
                                            </li>
                                        ))}
                                    </ul>
                                </div>
                            </div>
                        </div>
                    ))}
                </div>
            </div>
        </section>

        <!-- Skills Summary -->
        <section class="py-16 px-4 sm:px-6 lg:px-8 bg-accent-color">
            <div class="container mx-auto max-w-4xl">
                <h2 class="text-2xl font-bold text-center mb-8">Core Competencies Gained</h2>
                <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                    <div class="text-center p-4 bg-background-color rounded-lg border border-cyan-500/20">
                        <div class="text-3xl mb-2">üé®</div>
                        <p class="text-sm font-medium">Visual Design</p>
                    </div>
                    <div class="text-center p-4 bg-background-color rounded-lg border border-cyan-500/20">
                        <div class="text-3xl mb-2">üìä</div>
                        <p class="text-sm font-medium">Event Management</p>
                    </div>
                    <div class="text-center p-4 bg-background-color rounded-lg border border-cyan-500/20">
                        <div class="text-3xl mb-2">üë•</div>
                        <p class="text-sm font-medium">Team Leadership</p>
                    </div>
                    <div class="text-center p-4 bg-background-color rounded-lg border border-cyan-500/20">
                        <div class="text-3xl mb-2">üíª</div>
                        <p class="text-sm font-medium">IT Support</p>
                    </div>
                </div>
            </div>
        </section>

        <!-- CTA Section -->
        <section class="py-24 px-4 sm:px-6 lg:px-8 text-center">
            <div class="container mx-auto max-w-4xl fade-in-scroll">
                <h2 class="text-3xl font-bold mb-6">Ready to Learn More?</h2>
                <p class="text-text-secondary mb-8 max-w-2xl mx-auto">
                    Check out my IT Support projects or get in touch for collaboration opportunities.
                </p>
                <div class="flex flex-wrap justify-center gap-4">
                    <a href={import.meta.env.BASE_URL + "role-it-support/projects"} class="button_primary px-8 py-3 font-bold">
                        View IT Projects
                    </a>
                    <a href={import.meta.env.BASE_URL + "home-it-support/"} class="px-8 py-3 font-bold border border-cyan-500/50 rounded-lg hover:bg-cyan-500/10 transition-colors">
                        Back to IT Support Profile
                    </a>
                </div>
            </div>
        </section>
    </main>
</Layout>

<style>
    .fade-in-scroll {
        opacity: 0;
        transform: translateY(20px);
        animation: fadeInUp 0.6s ease-out forwards;
    }
    
    @keyframes fadeInUp {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    .fade-in-scroll:nth-child(1) { animation-delay: 0.1s; }
    .fade-in-scroll:nth-child(2) { animation-delay: 0.2s; }
    .fade-in-scroll:nth-child(3) { animation-delay: 0.3s; }
</style>

<script>
    localStorage.setItem("selectedProfile", "it-support");
</script>
