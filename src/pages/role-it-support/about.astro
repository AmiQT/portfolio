---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/it-support/Header.astro";
import ProfileSelector from "../../components/shared/ProfileSelector.astro";

const itSkills = [
    { name: "Troubleshooting", level: 90, icon: "üîß" },
    { name: "System Administration", level: 85, icon: "üíª" },
    { name: "Network Configuration", level: 80, icon: "üåê" },
    { name: "Active Directory", level: 75, icon: "üìÅ" },
    { name: "Office 365", level: 85, icon: "üìä" },
    { name: "Technical Documentation", level: 90, icon: "üìù" },
];

const softSkills = [
    { name: "Communication", icon: "üí¨" },
    { name: "Problem Solving", icon: "üß©" },
    { name: "Team Leadership", icon: "üë•" },
    { name: "Time Management", icon: "‚è∞" },
];

const certifications = [
    {
        name: "Google IT Support Professional",
        issuer: "Google",
        year: "2024",
        icon: "üèÜ",
    },
    {
        name: "CompTIA A+ (In Progress)",
        issuer: "CompTIA",
        year: "2024",
        icon: "üìú",
    },
];
---

<Layout
    title="About - IT Support - Noor Azami"
    description="Learn more about Noor Azami's background, skills, and qualifications in IT Support."
    canonical="/role-it-support/about"
>
    <Header />
    <ProfileSelector />

    <main class="pt-16">
        <!-- Hero Section -->
        <section class="py-24 px-4 sm:px-6 lg:px-8 animated-gradient">
            <div class="container mx-auto max-w-4xl">
                <div class="grid md:grid-cols-2 gap-12 items-center">
                    <!-- Profile Image -->
                    <div class="fade-in-scroll">
                        <div class="relative">
                            <div
                                class="w-64 h-64 mx-auto rounded-2xl overflow-hidden border-4 border-cyan-500/30 shadow-2xl shadow-cyan-500/20"
                            >
                                <div
                                    class="w-full h-full bg-center bg-cover"
                                    style={`background-image: url('${import.meta.env.BASE_URL}assets/profile.webp')`}
                                >
                                </div>
                            </div>
                            <div
                                class="absolute -bottom-4 left-1/2 -translate-x-1/2 px-4 py-2 bg-cyan-500 rounded-full text-sm font-bold text-white"
                            >
                                IT Support Professional
                            </div>
                        </div>
                    </div>

                    <!-- Bio -->
                    <div class="fade-in-scroll text-center md:text-left">
                        <h1 class="text-4xl md:text-5xl font-bold mb-4">
                            Noor Azami
                        </h1>
                        <p class="text-xl text-cyan-400 mb-6">
                            IT Support Specialist & System Administrator
                        </p>
                        <p class="text-text-secondary leading-relaxed mb-6">
                            I am an IT undergraduate at Universiti Tun Hussein
                            Onn Malaysia with a passion for technical support
                            and system administration. I specialize in
                            troubleshooting, network configuration, and
                            providing excellent end-user support.
                        </p>
                        <div
                            class="flex flex-wrap gap-3 justify-center md:justify-start"
                        >
                            <span
                                class="px-3 py-1 bg-cyan-500/10 border border-cyan-500/30 rounded-full text-sm"
                            >
                                üìç Malaysia
                            </span>
                            <span
                                class="px-3 py-1 bg-cyan-500/10 border border-cyan-500/30 rounded-full text-sm"
                            >
                                üéì IT Student
                            </span>
                            <span
                                class="px-3 py-1 bg-cyan-500/10 border border-cyan-500/30 rounded-full text-sm"
                            >
                                üåê Remote Ready
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Technical Skills -->
        <section class="py-16 px-4 sm:px-6 lg:px-8 bg-accent-color">
            <div class="container mx-auto max-w-4xl">
                <h2 class="text-2xl font-bold text-center mb-8">
                    Technical Skills
                </h2>
                <div class="grid md:grid-cols-2 gap-6">
                    {
                        itSkills.map((skill) => (
                            <div class="bg-background-color rounded-lg p-4 border border-cyan-500/20 fade-in-scroll">
                                <div class="flex items-center gap-3 mb-3">
                                    <span class="text-2xl">{skill.icon}</span>
                                    <span class="font-medium">
                                        {skill.name}
                                    </span>
                                    <span class="ml-auto text-cyan-400 font-bold">
                                        {skill.level}%
                                    </span>
                                </div>
                                <div class="w-full h-2 bg-gray-700 rounded-full overflow-hidden">
                                    <div
                                        class="h-full bg-gradient-to-r from-cyan-500 to-teal-400 rounded-full transition-all duration-1000"
                                        style={`width: ${skill.level}%`}
                                    />
                                </div>
                            </div>
                        ))
                    }
                </div>
            </div>
        </section>

        <!-- Soft Skills -->
        <section class="py-16 px-4 sm:px-6 lg:px-8">
            <div class="container mx-auto max-w-4xl">
                <h2 class="text-2xl font-bold text-center mb-8">Soft Skills</h2>
                <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                    {
                        softSkills.map((skill) => (
                            <div class="text-center p-6 bg-accent-color rounded-xl border border-cyan-500/20 hover:border-cyan-500/40 transition-all fade-in-scroll">
                                <div class="text-4xl mb-3">{skill.icon}</div>
                                <p class="font-medium">{skill.name}</p>
                            </div>
                        ))
                    }
                </div>
            </div>
        </section>

        <!-- Certifications -->
        <section class="py-16 px-4 sm:px-6 lg:px-8 bg-accent-color">
            <div class="container mx-auto max-w-4xl">
                <h2 class="text-2xl font-bold text-center mb-8">
                    Certifications
                </h2>
                <div class="grid md:grid-cols-2 gap-6">
                    {
                        certifications.map((cert) => (
                            <div class="bg-background-color rounded-xl p-6 border border-cyan-500/20 flex items-start gap-4 fade-in-scroll">
                                <div class="w-12 h-12 bg-cyan-500/20 rounded-lg flex items-center justify-center flex-shrink-0">
                                    <span class="text-2xl">{cert.icon}</span>
                                </div>
                                <div>
                                    <h3 class="font-bold text-lg">
                                        {cert.name}
                                    </h3>
                                    <p class="text-cyan-400">{cert.issuer}</p>
                                    <p class="text-sm text-text-secondary">
                                        {cert.year}
                                    </p>
                                </div>
                            </div>
                        ))
                    }
                </div>
            </div>
        </section>

        <!-- CTA Section -->
        <section class="py-24 px-4 sm:px-6 lg:px-8 text-center">
            <div class="container mx-auto max-w-4xl fade-in-scroll">
                <h2 class="text-3xl font-bold mb-6">Let's Connect!</h2>
                <p class="text-text-secondary mb-8 max-w-2xl mx-auto">
                    Interested in working together or have questions about my IT
                    Support experience?
                </p>
                <div class="flex flex-wrap justify-center gap-4">
                    <a
                        href={import.meta.env.BASE_URL +
                            "role-it-support/contact"}
                        class="button_primary px-8 py-3 font-bold"
                    >
                        Get In Touch
                    </a>
                    <a
                        href={import.meta.env.BASE_URL + "home-it-support/"}
                        class="px-8 py-3 font-bold border border-cyan-500/50 rounded-lg hover:bg-cyan-500/10 transition-colors"
                    >
                        Back to IT Support Profile
                    </a>
                </div>
            </div>
        </section>
    </main>
</Layout>

<style>
    .fade-in-scroll {
        opacity: 0;
        transform: translateY(20px);
        animation: fadeInUp 0.6s ease-out forwards;
    }

    @keyframes fadeInUp {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<script>
    localStorage.setItem("selectedProfile", "it-support");
</script>
