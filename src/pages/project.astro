---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
---

<Layout title="Projects - Noor Azami" description="Browse the projects of Noor Azami, including mobile apps, landing pages, and other software development work.">
    <Header />
    <main class="pt-16">
        <section class="py-24 px-4 sm:px-6 lg:px-8 text-center">
            <div class="container mx-auto fade-in-scroll">
                <h1 class="text-4xl md:text-5xl font-bold mb-4">My Projects</h1>
                <p class="text-lg text-text-secondary max-w-3xl mx-auto">A collection of my work, from mobile apps to command-line tools.</p>
            </div>
        </section>

        <section class="pb-24 px-4 sm:px-6 lg:px-8">
            <div class="container mx-auto">
                <!-- Filter Buttons -->
                <div class="flex flex-col items-center mb-12 fade-in-scroll">
                    <div class="flex justify-center flex-wrap gap-4 mb-4">
                        <button class="filter-button active" data-filter="all">All</button>
                        <button class="filter-button" data-filter="landing-page">Landing Page</button>
                        <button class="filter-button" data-filter="mobile">Mobile App</button>
                        <button class="filter-button" data-filter="c++">C++</button>
                    </div>
                    <div class="filter-counter">Showing 4 projects</div>
                </div>

                <!-- Project Grid -->
                <div class="projects-grid project-grid">
                    <!-- Project: Rumah Tenang -->
                    <div class="project-card fade-in-scroll" data-category="landing-page">
                        <div class="project-image-container">
                            													<img src={import.meta.env.BASE_URL + "assets/rumah_tenang.webp"} alt="Rumah Tenang Project" class="w-full h-full object-contain rounded-lg" loading="lazy">
                        </div>
                        <div class="project-card-content">
                            <div class="flex items-center gap-2 mb-3">
                                <span class="project-badge landing-page">Landing Page</span>
                                <div class="flex gap-1">
                                    <span class="px-2 py-1 text-xs font-semibold bg-blue-500/20 text-blue-400 border border-blue-500/30 rounded">HTML</span>
                                    <span class="px-2 py-1 text-xs font-semibold bg-yellow-500/20 text-yellow-400 border border-yellow-500/30 rounded">CSS</span>
                                    <span class="px-2 py-1 text-xs font-semibold bg-orange-500/20 text-orange-400 border border-orange-500/30 rounded">JS</span>
                                </div>
                            </div>
                            <h3 class="project-title">Rumah Tenang - Your Authentic Malaysian Escape</h3>
                            <p class="project-description mb-3">A comprehensive landing page showcasing Malaysian hospitality with interactive booking system, image galleries, and responsive design.</p>
                            <div class="mb-4">
                                <h4 class="text-sm font-semibold text-[var(--primary-color)] mb-2">Skills Demonstrated:</h4>
                                <p class="text-xs text-text-secondary mb-2">• Responsive Web Design • UI/UX Principles • JavaScript Interactivity • Form Validation • Image Optimization</p>
                                <h4 class="text-sm font-semibold text-[var(--primary-color)] mb-2">Key Learnings:</h4>
                                <p class="text-xs text-text-secondary">• Modern CSS Grid & Flexbox • Mobile-first Design • Performance Optimization • User Experience Design</p>
                            </div>
                            <a href="https://amiqt.github.io/landing_page_1/" target="_blank" rel="noopener noreferrer" class="button_primary w-full text-center">View Project</a>
                        </div>
                    </div>

                    <!-- Project: Nasi Lemak Burger -->
                    <div class="project-card fade-in-scroll" data-category="landing-page">
                        <div class="project-image-container">
                            													<img src={import.meta.env.BASE_URL + "assets/burger.webp"} alt="Nasi Lemak Burger Project" class="w-full h-full object-contain rounded-lg" loading="lazy">
                        </div>
                        <div class="project-card-content">
                            <div class="flex items-center gap-2 mb-3">
                                <span class="project-badge landing-page">Landing Page</span>
                                <div class="flex gap-1">
                                    <span class="px-2 py-1 text-xs font-semibold bg-blue-500/20 text-blue-400 border border-blue-500/30 rounded">HTML</span>
                                    <span class="px-2 py-1 text-xs font-semibold bg-yellow-500/20 text-yellow-400 border border-yellow-500/30 rounded">CSS</span>
                                    <span class="px-2 py-1 text-xs font-semibold bg-orange-500/20 text-orange-400 border border-orange-500/30 rounded">JS</span>
                                </div>
                            </div>
                            <h3 class="project-title">Nasi Lemak Burger</h3>
                            <p class="project-description mb-3">A marketing-focused landing page for a limited-time food promotion with countdown timer, order tracking, and social proof elements.</p>
                            <div class="mb-4">
                                <h4 class="text-sm font-semibold text-[var(--primary-color)] mb-2">Skills Demonstrated:</h4>
                                <p class="text-xs text-text-secondary mb-2">• Marketing Web Design • JavaScript Countdown • Form Handling • Social Media Integration • Call-to-Action Design</p>
                                <h4 class="text-sm font-semibold text-[var(--primary-color)] mb-2">Key Learnings:</h4>
                                <p class="text-xs text-text-secondary">• Conversion Rate Optimization • Time-sensitive UI Design • Customer Psychology • Digital Marketing Principles</p>
                            </div>
                            <a href="https://amiqt.github.io/landing_page_2/" target="_blank" rel="noopener noreferrer" class="button_primary w-full text-center">View Project</a>
                        </div>
                    </div>
                    <!-- Project 1: Healthy Food App -->
                    <div class="project-card fade-in-scroll" data-category="mobile">
                        <div class="project-image-container">
                            <div class="mobile-mockup">
                                <div class="text-center text-xs font-bold text-white mb-2">Healthy Food App</div>
                                <div class="flex-grow bg-gray-700 rounded-lg p-2 text-xs text-gray-300 overflow-hidden">
                                    <p class="font-semibold mb-1">✨ Features</p>
                                    <ul class="list-disc list-inside text-gray-400">
                                        <li>Meal Discovery</li>
                                        <li>Nutritional Tracking</li>
                                        <li>Shopping Cart</li>
                                        <li>Offline Access</li>
                                    </ul>
                                </div>
                                <div class="flex justify-center items-center mt-2">
                                    <svg class="w-6 h-6 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"></path></svg>
                                </div>
                            </div>
                        </div>
                        <div class="project-card-content">
                            <div class="flex items-center gap-2 mb-3">
                                <span class="project-badge mobile">Mobile App</span>
                                <div class="flex gap-1">
                                    <span class="px-2 py-1 text-xs font-semibold bg-blue-600/20 text-blue-400 border border-blue-600/30 rounded">Flutter</span>
                                    <span class="px-2 py-1 text-xs font-semibold bg-purple-500/20 text-purple-400 border border-purple-500/30 rounded">Dart</span>
                                    <span class="px-2 py-1 text-xs font-semibold bg-green-500/20 text-green-400 border border-green-500/30 rounded">Mobile</span>
                                </div>
                            </div>
                            <h3 class="project-title">Healthy Food App</h3>
                            <p class="project-description mb-3">A comprehensive mobile application for healthy meal planning, nutritional tracking, and recipe discovery with offline capabilities.</p>
                            <div class="mb-4">
                                <h4 class="text-sm font-semibold text-[var(--primary-color)] mb-2">Skills Demonstrated:</h4>
                                <p class="text-xs text-text-secondary mb-2">• Flutter Development • State Management • Mobile UI/UX • Database Integration • Offline Functionality</p>
                                <h4 class="text-sm font-semibold text-[var(--primary-color)] mb-2">Key Learnings:</h4>
                                <p class="text-xs text-text-secondary">• Cross-platform Development • Mobile App Architecture • User Experience Design • Performance Optimization</p>
                            </div>
                            <a href="https://github.com/AmiQT/healthy_food_app" target="_blank" rel="noopener noreferrer" class="button_primary w-full text-center">View on GitHub</a>
                        </div>
                    </div>

                    <!-- Project 2: Hotel Management System -->
                    <div class="project-card fade-in-scroll" data-category="c++">
                        <div class="project-image-container">
                            <div class="terminal-mockup">
                                <div class="flex items-center pb-1 mb-1 border-b border-gray-700">
                                    <div class="w-3 h-3 bg-red-500 rounded-full mr-1.5"></div>
                                    <div class="w-3 h-3 bg-yellow-500 rounded-full mr-1.5"></div>
                                    <div class="w-3 h-3 bg-green-500 rounded-full"></div>
                                </div>
                                <div class="flex-grow overflow-hidden">
                                    <p class="text-gray-400">> g++ main.cpp -o hotel_manager</p>
                                    <p class="text-gray-400">> ./hotel_manager</p>
                                    <p>Hotel Management System</p>
                                    <p>1. Add Room</p>
                                    <p>2. Book Room</p>
                                    <p>3. Checkout Room</p>
                                    <p class="text-green-400 animate-pulse">> Enter choice: _</p>
                                </div>
                            </div>
                        </div>
                        <div class="project-card-content">
                            <div class="flex items-center gap-2 mb-3">
                                <span class="project-badge cpp">C++</span>
                                <div class="flex gap-1">
                                    <span class="px-2 py-1 text-xs font-semibold bg-blue-700/20 text-blue-400 border border-blue-700/30 rounded">C++</span>
                                    <span class="px-2 py-1 text-xs font-semibold bg-purple-600/20 text-purple-400 border border-purple-600/30 rounded">OOP</span>
                                    <span class="px-2 py-1 text-xs font-semibold bg-gray-500/20 text-gray-400 border border-gray-500/30 rounded">CLI</span>
                                </div>
                            </div>
                            <h3 class="project-title">Hotel Management System</h3>
                            <p class="project-description mb-3">A command-line hotel management system demonstrating object-oriented programming principles with room booking, checkout, and data management.</p>
                            <div class="mb-4">
                                <h4 class="text-sm font-semibold text-[var(--primary-color)] mb-2">Skills Demonstrated:</h4>
                                <p class="text-xs text-text-secondary mb-2">• Object-Oriented Programming • C++ Development • Data Structures • File I/O Operations • Console Application Design</p>
                                <h4 class="text-sm font-semibold text-[var(--primary-color)] mb-2">Key Learnings:</h4>
                                <p class="text-xs text-text-secondary">• Class Design & Inheritance • Memory Management • User Input Validation • System Architecture Design</p>
                            </div>
                            <a href="https://github.com/AmiQT/Hotel-Management-System" target="_blank" rel="noopener noreferrer" class="button_primary w-full text-center">View on GitHub</a>
                        </div>
                    </div>

                </div>

                <!-- No Results Message -->
                <div class="no-results hidden">
                    <h3>No projects found</h3>
                    <p>Try selecting a different category or check back later for new projects.</p>
                </div>

                <!-- My Skillset Section -->
                <section class="py-24 px-4 sm:px-6 lg:px-8">
                    <div class="container mx-auto">
                        <h2 class="text-3xl font-bold text-center mb-12 fade-in-scroll">My Skillset</h2>
                        <div class="max-w-4xl mx-auto">
                            <div class="mb-10 fade-in-scroll">
                                <h3 class="text-xl font-semibold text-center mb-6">Hard Skills</h3>
                                <div class="flex flex-wrap justify-center gap-4">
                                    <div class="skill-badge"><span>Networking</span></div>
                                    <div class="skill-badge"><span>IT Troubleshooting</span></div>
                                    <div class="skill-badge"><span>Adobe Photoshop</span></div>
                                    <div class="skill-badge"><span>Adobe Illustrator</span></div>
                                    <div class="skill-badge"><span>Canva</span></div>
                                    <div class="skill-badge"><span>Linux</span></div>
                                    <div class="skill-badge"><span>Windows</span></div>
                                    <div class="skill-badge"><span>VMware</span></div>
                                    <div class="skill-badge"><span>Remote Support</span></div>
                                    <div class="skill-badge"><span>Multimedia</span></div>
                                </div>
                            </div>
                            <div class="fade-in-scroll">
                                <h3 class="text-xl font-semibold text-center mb-6">Soft Skills</h3>
                                <div class="flex flex-wrap justify-center gap-4">
                                    <div class="skill-badge"><span>Project Management</span></div>
                                    <div class="skill-badge"><span>Leadership</span></div>
                                    <div class="skill-badge"><span>Communication</span></div>
                                    <div class="skill-badge"><span>Organization</span></div>
                                    <div class="skill-badge"><span>Problem-Solving</span></div>
                                    <div class="skill-badge"><span>Management</span></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </section>
    </main>
</Layout>
