---
import Layout from "../layouts/Layout.astro";
import NotebookCell from "../components/NotebookCell.astro";
import IdeActivityBar from "../components/ide/IdeActivityBar.astro";
import IdeSidebar from "../components/ide/IdeSidebar.astro";
import IdeTabBar from "../components/ide/IdeTabBar.astro";
import MobileNav from "../components/ide/MobileNav.astro";
import {
  profile,
  files,
  expertise,
  projectsData as projects,
} from "../data/software-developer";

// Helper for base URL
const getAssetPath = (path: string) => {
  return path.startsWith("http") ? path : import.meta.env.BASE_URL + path;
};
---

<Layout
  title="Home - Software Developer - Noor Azami"
  description="Software Developer Portfolio - Full-stack development, web applications, and software engineering."
  canonical="/home-software-developer/"
>
  <div
    class="flex h-screen bg-white dark:bg-[#0d1117] text-gray-900 dark:text-gray-300 overflow-hidden font-sans transition-colors duration-300"
  >
    <IdeActivityBar />
    <IdeSidebar files={files} />

    <!-- Main Editor Area -->
    <main
      class="flex-1 flex flex-col min-w-0 bg-white dark:bg-[#0d1117] transition-colors duration-300"
    >
      <IdeTabBar />

      <!-- Breadcrumbs / Toolbar -->
      <div
        class="flex items-center gap-2 px-4 py-1 bg-white dark:bg-[#0d1117] border-b border-gray-200 dark:border-gray-800 text-xs text-gray-500 transition-colors duration-300"
      >
        <span>src</span>
        <span>‚Ä∫</span>
        <span>pages</span>
        <span>‚Ä∫</span>
        <span>home-software-developer.ipynb</span>
        <div class="ml-auto flex gap-2">
          <span
            class="cursor-pointer hover:text-gray-900 dark:hover:text-white"
            id="run-all-btn"
            title="Run All Cells">‚ñ∂ Run All</span
          >
          <span
            class="cursor-pointer hover:text-gray-900 dark:hover:text-white"
            id="restart-btn"
            title="Restart Kernel">‚Üª Restart</span
          >
        </div>
      </div>

      <!-- Notebook Content (Scrollable) -->
      <div
        class="flex-1 overflow-y-auto p-4 md:p-8 scroll-smooth"
        id="notebook-content"
      >
        <!-- Cell 1: Imports & Setup (Hero) -->
        <NotebookCell
          cellNumber={1}
          code={`import { Developer, Human } from '@universe/beings';\nimport { Passion, Skills } from '@internal/attributes';\n\nconst noor = new Developer({\n  name: "${profile.name}",\n  role: "${profile.role}",\n  status: "${profile.status}",\n  location: ${JSON.stringify(profile.location)}\n});\n\nnoor.introduce();`}
        >
          <section
            id="hero"
            class="relative flex flex-col items-center justify-center text-center py-12 md:py-20 bg-gradient-to-br from-blue-900 to-slate-900 rounded-lg overflow-hidden border border-blue-500/30 shadow-2xl"
          >
            <div class="z-10 px-4">
              <h1
                class="text-4xl md:text-6xl font-bold mb-4 leading-tight text-white drop-shadow-lg"
              >
                {profile.name}
              </h1>
              <p
                class="text-lg md:text-xl font-medium mb-6 max-w-3xl mx-auto leading-relaxed text-gray-100"
              >
                {profile.bio}
              </p>

              <div class="flex flex-wrap justify-center gap-3 mb-8">
                <span
                  class="px-3 py-1 bg-black/30 backdrop-blur-md border border-white/20 rounded-full text-sm text-white"
                  >üìç Remote Ready</span
                >
                <span
                  class="px-3 py-1 bg-black/30 backdrop-blur-md border border-white/20 rounded-full text-sm text-white"
                  >üè¢ Hybrid Preferred</span
                >
                <span
                  class="px-3 py-1 bg-black/30 backdrop-blur-md border border-white/20 rounded-full text-sm text-white"
                  >üåç Relocation Open</span
                >
              </div>

              <div class="flex flex-wrap justify-center gap-4">
                <a
                  href="/portfolio/contact"
                  class="button_primary text-base font-bold px-6 py-2 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all"
                >
                  Get In Touch
                </a>
                <a
                  href={getAssetPath(profile.resume)}
                  download="Fullstack_Developer_Intern.pdf"
                  class="button_primary text-base font-bold px-6 py-2 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all"
                >
                  Download Resume
                </a>
                <a
                  href="/portfolio/experience"
                  class="button_primary text-base font-bold px-6 py-2 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all"
                >
                  View Experience
                </a>
              </div>
            </div>
          </section>
        </NotebookCell>

        <!-- Cell 2: About Me -->
        <NotebookCell
          cellNumber={2}
          code={`# Markdown Cell\n## About Me\n> "I build responsive web applications and solve complex problems."`}
        >
          <div
            id="about"
            class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center p-4"
          >
            <div
              class="w-full aspect-square max-w-xs mx-auto lg:mx-0 rounded-lg bg-center bg-no-repeat bg-cover border-2 border-gray-700 shadow-2xl"
              style={`background-image: url("${getAssetPath(profile.avatar)}")`}
            >
            </div>
            <div class="text-left">
              <h2 class="text-2xl font-bold mb-4 text-gray-900 dark:text-white">
                About The Developer
              </h2>
              <p
                class="text-base text-gray-700 dark:text-gray-300 leading-relaxed mb-6"
              >
                I am a passionate software developer currently pursuing an IT
                degree at Universiti Tun Hussein Onn Malaysia. With expertise in
                full-stack development, I build responsive web applications and
                solve complex problems through clean, efficient code.
              </p>
              <a
                href={import.meta.env.BASE_URL + "about"}
                class="text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300 hover:underline flex items-center gap-1"
              >
                Read full bio <span class="text-xs">‚Üó</span>
              </a>
            </div>
          </div>
        </NotebookCell>

        <!-- Cell 3: Expertise -->
        <NotebookCell
          cellNumber={3}
          code={`const expertise = {\n  frontend: ['React', 'Vue.js', 'Tailwind'],\n  backend: ['Node.js', 'Database Design'],\n  optimization: ['Performance', 'Scalability']\n};\n\nconsole.table(expertise);`}
        >
          <div id="expertise" class="grid grid-cols-1 md:grid-cols-3 gap-6">
            {
              expertise.map((skill) => (
                <div class="bg-white dark:bg-[#161b22] p-6 rounded-lg border border-gray-200 dark:border-gray-700 hover:border-blue-500/50 transition-colors shadow-sm dark:shadow-none">
                  <div
                    class={`text-${skill.color}-600 dark:text-${skill.color}-400 mb-4`}
                  >
                    {/* Icons are simplified for now, could be dynamic based on skill.icon */}
                    <svg
                      class="w-10 h-10"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"
                      />
                    </svg>
                  </div>
                  <h3 class="text-lg font-semibold mb-2 text-gray-900 dark:text-white">
                    {skill.title}
                  </h3>
                  <p class="text-sm text-gray-600 dark:text-gray-400">
                    {skill.desc}
                  </p>
                </div>
              ))
            }
          </div>
        </NotebookCell>

        <!-- Cell 4: Projects -->
        <NotebookCell
          cellNumber={4}
          code={`import { projects } from './data/projects';\n\n// Render project gallery with visual previews\nprojects.forEach(p => p.renderPreview());`}
        >
          <div
            id="projects"
            class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6"
          >
            {
              projects.map((project) => (
                <div class="bg-white dark:bg-[#161b22] rounded-lg border border-gray-200 dark:border-gray-700 overflow-hidden hover:shadow-xl transition-all group shadow-sm">
                  {project.image === "gradient" ? (
                    <div class="h-40 bg-gradient-to-br from-pink-100 dark:from-pink-900/40 to-purple-100 dark:to-purple-900/40 flex items-center justify-center border-b border-gray-200 dark:border-gray-700 relative overflow-hidden">
                      <div class="absolute inset-0 bg-white/20 dark:bg-black/20 group-hover:bg-transparent transition-colors" />
                      <div class="text-center z-10">
                        <div
                          class={`w-12 h-12 bg-${project.color}-500/10 dark:bg-${project.color}-500/20 rounded-full flex items-center justify-center mx-auto mb-2 backdrop-blur-sm`}
                        >
                          <svg
                            class={`w-6 h-6 text-${project.color}-600 dark:text-${project.color}-400`}
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                          >
                            <path
                              stroke-linecap="round"
                              stroke-linejoin="round"
                              stroke-width="2"
                              d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"
                            />
                          </svg>
                        </div>
                        <h4
                          class={`text-xs font-bold text-${project.color}-700 dark:text-${project.color}-300`}
                        >
                          {project.title}
                        </h4>
                      </div>
                    </div>
                  ) : project.placeholder ? (
                    <div class="h-40 bg-gray-200 dark:bg-gray-800 flex items-center justify-center relative overflow-hidden">
                      <div class="text-center">
                        <div class="text-xs font-bold text-gray-700 dark:text-white mb-1">
                          {project.title}
                        </div>
                        <div class="flex justify-center">
                          <svg
                            class={`w-8 h-8 text-${project.color}-600 dark:text-${project.color}-400`}
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                          >
                            <path
                              stroke-linecap="round"
                              stroke-linejoin="round"
                              stroke-width="2"
                              d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"
                            />
                          </svg>
                        </div>
                      </div>
                    </div>
                  ) : (
                    <div class="h-40 bg-gray-200 dark:bg-gray-800 relative overflow-hidden">
                      <img
                        src={getAssetPath(project.image)}
                        alt={project.title}
                        class="w-full h-full object-cover opacity-90 dark:opacity-80 group-hover:opacity-100 transition-opacity"
                        loading="lazy"
                      />
                    </div>
                  )}

                  <div class="p-4">
                    <div class="flex justify-between items-start mb-2">
                      <h3 class="text-base font-bold text-gray-900 dark:text-white">
                        {project.title}
                      </h3>
                      <span class="text-[10px] uppercase tracking-wider bg-blue-100 dark:bg-blue-900/30 text-blue-700 dark:text-blue-300 px-2 py-0.5 rounded border border-blue-200 dark:border-blue-800">
                        {project.type}
                      </span>
                    </div>
                    <p class="text-xs text-gray-600 dark:text-gray-400 mb-4 line-clamp-2">
                      {project.desc}
                    </p>
                    <a
                      href={getAssetPath(project.link)}
                      class="text-xs font-bold text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300 flex items-center gap-1"
                    >
                      View Project <span>‚Üí</span>
                    </a>
                  </div>
                </div>
              ))
            }
          </div>
          <div class="mt-6 text-center">
            <a
              href={import.meta.env.BASE_URL +
                "role-software-developer/projects"}
              class="text-sm text-gray-400 hover:text-white underline decoration-dotted"
              >View all projects in file explorer...</a
            >
          </div>
        </NotebookCell>

        <!-- Cell 5: Contact -->
        <NotebookCell
          cellNumber={5}
          code={`// Initialize connection protocol\nawait contact.connect({ method: 'ALL' });`}
        >
          <div id="contact" class="text-center py-8">
            <h2 class="text-2xl font-bold mb-4 text-gray-900 dark:text-white">
              Ready to Collaborate?
            </h2>
            <p class="text-gray-600 dark:text-gray-400 mb-6 max-w-2xl mx-auto">
              Let's build something amazing together. My terminal is always open
              for new opportunities.
            </p>
            <div class="flex justify-center gap-4">
              <a href="/portfolio/contact" class="button_primary px-8 py-2"
                >Get In Touch</a
              >
            </div>
          </div>
        </NotebookCell>
      </div>
    </main>

    <MobileNav files={files} />
  </div>
</Layout>

<script>
  localStorage.setItem("selectedProfile", "software-developer");

  const profileBtn = document.getElementById("profile-toggle-btn");
  if (profileBtn) {
    profileBtn.addEventListener("click", () => {
      // Navigate to IT Support profile
      const baseUrl = import.meta.env.BASE_URL;
      window.location.href = baseUrl + "home-it-support";
    });
  }

  // Handle Sidebar Actions
  document.querySelectorAll("[data-action]").forEach((el) => {
    el.addEventListener("click", (e) => {
      const action = (e.currentTarget as HTMLElement).dataset.action;
      if (action === "search") {
        alert("Search functionality coming soon! üîç");
      } else if (action === "source-control") {
        window.open("https://github.com/", "_blank");
      } else if (action === "extensions") {
        document
          .getElementById("expertise")
          ?.scrollIntoView({ behavior: "smooth" });
      }
    });
  });

  // Handle File Explorer Clicks
  document.querySelectorAll("[data-file]").forEach((el) => {
    el.addEventListener("click", (e) => {
      const fileName = (e.currentTarget as HTMLElement).dataset.file;
      const fileMap: Record<string, string> = {
        "home-software-developer.ipynb": "hero",
        "projects.json": "projects",
        "skills.config.js": "expertise",
        "contact.ts": "contact",
      };

      if (fileName && fileMap[fileName]) {
        const targetId = fileMap[fileName];
        document
          .getElementById(targetId)
          ?.scrollIntoView({ behavior: "smooth" });

        // Update active state visual
        document.querySelectorAll("[data-file]").forEach((f) => {
          f.classList.remove(
            "bg-white",
            "dark:bg-[#1f2428]",
            "text-black",
            "dark:text-white",
            "shadow-sm",
          );
          f.classList.add(
            "text-gray-600",
            "dark:text-gray-400",
            "hover:bg-gray-200",
            "dark:hover:bg-[#1f2428]",
            "hover:text-black",
            "dark:hover:text-white",
          );
        });
        (e.currentTarget as HTMLElement).classList.remove(
          "text-gray-600",
          "dark:text-gray-400",
          "hover:bg-gray-200",
          "dark:hover:bg-[#1f2428]",
          "hover:text-black",
          "dark:hover:text-white",
        );
        (e.currentTarget as HTMLElement).classList.add(
          "bg-white",
          "dark:bg-[#1f2428]",
          "text-black",
          "dark:text-white",
          "shadow-sm",
        );
      }
    });
  });

  // Handle Toolbar Actions
  document.getElementById("run-all-btn")?.addEventListener("click", () => {
    const content = document.getElementById("notebook-content");
    if (content) {
      content.style.opacity = "0.5";
      setTimeout(() => {
        content.style.opacity = "1";
      }, 500);
    }
  });

  document.getElementById("restart-btn")?.addEventListener("click", () => {
    window.location.reload();
  });

  // Theme Toggle Logic
  const themeBtn = document.getElementById("theme-toggle-btn");
  const sunIcon = document.getElementById("sun-icon");
  const moonIcon = document.getElementById("moon-icon");
  const html = document.documentElement;

  // Check local storage or system preference
  const savedTheme = localStorage.getItem("theme");
  const systemDark = window.matchMedia("(prefers-color-scheme: dark)").matches;

  if (savedTheme === "dark" || (!savedTheme && systemDark)) {
    html.classList.add("dark");
    sunIcon?.classList.remove("hidden");
    moonIcon?.classList.add("hidden");
    document.getElementById("mobile-sun-icon")?.classList.remove("hidden");
    document.getElementById("mobile-moon-icon")?.classList.add("hidden");
  } else {
    html.classList.remove("dark");
    sunIcon?.classList.add("hidden");
    moonIcon?.classList.remove("hidden");
    document.getElementById("mobile-sun-icon")?.classList.add("hidden");
    document.getElementById("mobile-moon-icon")?.classList.remove("hidden");
  }

  themeBtn?.addEventListener("click", () => {
    html.classList.toggle("dark");
    const isDark = html.classList.contains("dark");

    localStorage.setItem("theme", isDark ? "dark" : "light");

    if (isDark) {
      sunIcon?.classList.remove("hidden");
      moonIcon?.classList.add("hidden");
      document.getElementById("mobile-sun-icon")?.classList.remove("hidden");
      document.getElementById("mobile-moon-icon")?.classList.add("hidden");
    } else {
      sunIcon?.classList.add("hidden");
      moonIcon?.classList.remove("hidden");
      document.getElementById("mobile-sun-icon")?.classList.add("hidden");
      document.getElementById("mobile-moon-icon")?.classList.remove("hidden");
    }
  });

  // Mobile Navigation Logic
  const mobileFilesBtn = document.getElementById("mobile-files-btn");
  const mobileFileMenu = document.getElementById("mobile-file-menu");
  const mobileMenuContent = mobileFileMenu?.querySelector("div"); // The inner container

  mobileFilesBtn?.addEventListener("click", () => {
    if (mobileFileMenu && mobileMenuContent) {
      mobileFileMenu.classList.remove("hidden");
      // Small delay to allow display:block to apply before opacity transition
      setTimeout(() => {
        mobileFileMenu.classList.add("opacity-100");
        mobileMenuContent.classList.remove("translate-y-full");
      }, 10);
    }
  });

  // Mobile Theme Toggle
  document.getElementById("mobile-theme-btn")?.addEventListener("click", () => {
    themeBtn?.click(); // Reuse existing logic
  });

  // Mobile Profile Switch
  document
    .getElementById("mobile-profile-btn")
    ?.addEventListener("click", () => {
      document.getElementById("profile-toggle-btn")?.click(); // Reuse existing logic
    });

  // Mobile File Selection
  document.querySelectorAll("[data-mobile-file]").forEach((el) => {
    el.addEventListener("click", (e) => {
      const fileName = (e.currentTarget as HTMLElement).dataset.mobileFile;
      // Find corresponding desktop file element and click it to trigger existing logic
      const desktopFile = document.querySelector(
        `[data-file="${fileName}"]`,
      ) as HTMLElement;
      if (desktopFile) {
        desktopFile.click();
      }
      // Close menu
      if (mobileFileMenu && mobileMenuContent) {
        mobileMenuContent.classList.add("translate-y-full");
        mobileFileMenu.classList.remove("opacity-100");
        setTimeout(() => {
          mobileFileMenu.classList.add("hidden");
        }, 300);
      }
    });
  });

  // Sync initial mobile theme icon
  if (savedTheme === "dark" || (!savedTheme && systemDark)) {
    document.getElementById("mobile-sun-icon")?.classList.remove("hidden");
    document.getElementById("mobile-moon-icon")?.classList.add("hidden");
  } else {
    document.getElementById("mobile-sun-icon")?.classList.add("hidden");
    document.getElementById("mobile-moon-icon")?.classList.remove("hidden");
  }
</script>

<style>
  /* Custom Scrollbar for the "Editor" feel */
  #notebook-content::-webkit-scrollbar {
    width: 12px;
  }
  #notebook-content::-webkit-scrollbar-track {
    background: transparent;
  }
  #notebook-content::-webkit-scrollbar-thumb {
    background-color: #d1d5db; /* Light mode thumb */
    border-radius: 6px;
    border: 3px solid transparent;
    background-clip: content-box;
  }
  #notebook-content::-webkit-scrollbar-thumb:hover {
    background-color: #9ca3af;
  }

  /* Dark mode scrollbar overrides */
  :global(.dark) #notebook-content::-webkit-scrollbar-thumb {
    background-color: #30363d;
  }
  :global(.dark) #notebook-content::-webkit-scrollbar-thumb:hover {
    background-color: #484f58;
  }
</style>
