---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
---

<Layout title="Contact - Noor Azami" description="Contact Noor Azami to discuss projects, ideas, or opportunities. Get in touch via the contact form or social media." canonical="/contact">
    <Header />
    <main class="pt-16">
        <section class="py-24 px-4 sm:px-6 lg:px-8 text-center">
            <div class="container mx-auto fade-in-scroll">
                <h1 class="text-4xl md:text-5xl font-bold mb-4">Get in Touch</h1>
                <p class="text-lg text-text-secondary max-w-3xl mx-auto">I'm always open to discussing new projects, creative ideas, or opportunities. Feel free to reach out.</p>
            </div>
        </section>

        <section class="pb-24 px-4 sm:px-6 lg:px-8">
            <div class="container mx-auto">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-start">
                    <div class="space-y-8 fade-in-scroll">
                        <form id="contact-form" action="https://formspree.io/f/mldllrqd" class="space-y-6" method="POST">
                            <div>
                                <label class="block text-sm font-medium mb-2" for="name">Your Name *</label>
                                <input 
                                    class="input" 
                                    id="name" 
                                    name="name" 
                                    placeholder="Your Name" 
                                    type="text"
                                    required
                                    minlength="2"
                                    maxlength="50"
                                />
                                <div class="error-message hidden text-red-400 text-sm mt-1"></div>
                            </div>
                            <div>
                                <label class="block text-sm font-medium mb-2" for="email">Your Email *</label>
                                <input 
                                    class="input" 
                                    id="email" 
                                    name="email" 
                                    placeholder="your.email@example.com" 
                                    type="email"
                                    required
                                    pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$"
                                />
                                <div class="error-message hidden text-red-400 text-sm mt-1"></div>
                            </div>
                            <div>
                                <label class="block text-sm font-medium mb-2" for="subject">Subject</label>
                                <input 
                                    class="input" 
                                    id="subject" 
                                    name="subject" 
                                    placeholder="What's this about?" 
                                    type="text"
                                    maxlength="100"
                                />
                            </div>
                            <div>
                                <label class="block text-sm font-medium mb-2" for="message">Your Message *</label>
                                <textarea 
                                    class="input" 
                                    id="message" 
                                    name="message" 
                                    placeholder="Tell me about your project or opportunity..." 
                                    rows="6"
                                    required
                                    minlength="10"
                                    maxlength="1000"
                                ></textarea>
                                <div class="error-message hidden text-red-400 text-sm mt-1"></div>
                                <div class="text-sm text-text-secondary mt-1">
                                    <span id="char-count">0</span>/1000 characters
                                </div>
                            </div>
                            <div>
                                <button 
                                    id="submit-btn"
                                    class="button_primary w-full md:w-auto flex items-center justify-center gap-2" 
                                    type="submit"
                                >
                                    <span id="submit-text">Send Message</span>
                                    <svg id="loading-spinner" class="hidden w-5 h-5 animate-spin" fill="none" viewBox="0 0 24 24">
                                        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                                    </svg>
                                </button>
                            </div>
                            
                            <!-- Success Message -->
                            <div id="success-message" class="hidden bg-green-500/20 border border-green-500/50 rounded-lg p-4 text-green-300">
                                <div class="flex items-center gap-2">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                    </svg>
                                    <span>Thank you! Your message has been sent successfully. I'll get back to you soon.</span>
                                </div>
                            </div>
                            
                            <!-- Error Message -->
                            <div id="error-message" class="hidden bg-red-500/20 border border-red-500/50 rounded-lg p-4 text-red-300">
                                <div class="flex items-center gap-2">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                    </svg>
                                    <span>Sorry, there was an error sending your message. Please try again or contact me directly.</span>
                                </div>
                            </div>
                        </form>
