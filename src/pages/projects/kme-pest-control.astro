<script>
    // Software Developer Projects
    document.addEventListener("DOMContentLoaded", function () {
        const backButton = document.getElementById("back-to-projects");
        if (backButton) {
            backButton.addEventListener("click", function () {
                const profile =
                    localStorage.getItem("selectedProfile") ||
                    "software-developer";
                const baseUrl = window.location.pathname.startsWith(
                    "/portfolio",
                )
                    ? "/portfolio"
                    : "";

                if (profile === "it-support") {
                    window.location.href =
                        baseUrl + "/role-it-support/projects";
                } else {
                    window.location.href =
                        baseUrl + "/role-software-developer/projects";
                }
            });
        }
    });
</script>
