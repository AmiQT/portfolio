---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
---

<Layout
	title="Home - IT Support - Noor Azami"
	description="IT Support Professional Portfolio - Technical support, system administration, and infrastructure expertise."
	canonical="/home-it-support/"
>
	<Header />
	<main class="pt-16">
		<section
			class="relative flex items-center justify-center h-screen text-center px-4 sm:px-6 lg:px-8 animated-gradient"
		>
			<div class="z-10">
				<h1
					class="text-5xl md:text-7xl font-bold mb-4 leading-tight text-white"
				>
					Noor Azami
				</h1>
				<p
					class="text-xl md:text-2xl font-bold mb-6 max-w-4xl mx-auto leading-relaxed"
				>
					A certified IT Support Specialist with a passion for network
					administration and system efficiency, seeking to contribute
					to a leading technology team in Malaysia.
				</p>
				<p
					class="text-lg text-text-secondary mb-8 max-w-3xl mx-auto font-medium"
				>
					<span class="text-white font-semibold"
						>Seeking IT Internship Opportunities</span
					>
					<span class="text-text-secondary mx-2">|</span>
					<span class="text-text-secondary"
						>Open to Remote/Hybrid/Relocation</span
					>
				</p>
				<div class="flex flex-wrap justify-center gap-4 mb-8">
					<span
						class="inline-flex items-center gap-2 px-4 py-2 bg-gradient-to-r from-[var(--primary-color)]/20 to-[var(--button-hover)]/20 border border-[var(--primary-color)]/40 rounded-full text-sm font-medium hover:bg-gradient-to-r hover:from-[var(--primary-color)]/30 hover:to-[var(--button-hover)]/30 hover:border-[var(--primary-color)]/60 hover:scale-105 hover:shadow-lg hover:shadow-[var(--primary-color)]/20 transition-all duration-300 cursor-pointer transform hover:-translate-y-1"
					>
						üìç Remote Ready
					</span>
					<span
						class="inline-flex items-center gap-2 px-4 py-2 bg-gradient-to-r from-[var(--primary-color)]/20 to-[var(--button-hover)]/20 border border-[var(--primary-color)]/40 rounded-full text-sm font-medium hover:bg-gradient-to-r hover:from-[var(--primary-color)]/30 hover:to-[var(--button-hover)]/30 hover:border-[var(--primary-color)]/60 hover:scale-105 hover:shadow-lg hover:shadow-[var(--primary-color)]/20 transition-all duration-300 cursor-pointer transform hover:-translate-y-1"
					>
						üè¢ Hybrid Preferred
					</span>
					<span
						class="inline-flex items-center gap-2 px-4 py-2 bg-gradient-to-r from-[var(--primary-color)]/20 to-[var(--button-hover)]/20 border border-[var(--primary-color)]/40 rounded-full text-sm font-medium hover:bg-gradient-to-r hover:from-[var(--primary-color)]/30 hover:to-[var(--button-hover)]/30 hover:border-[var(--primary-color)]/60 hover:scale-105 hover:shadow-lg hover:shadow-[var(--primary-color)]/20 transition-all duration-300 cursor-pointer transform hover:-translate-y-1"
					>
						üåç Relocation Open
					</span>
				</div>
				<div class="flex flex-wrap justify-center gap-4">
					<a
						href="/portfolio/contact"
						class="button_primary text-lg font-bold px-8 py-3"
					>
						Get In Touch
					</a>
					<a
						href={import.meta.env.BASE_URL +
							"assets/IT Support Azami.pdf"}
						download
						class="button_primary text-lg font-bold px-8 py-3"
					>
						Download Resume
					</a>
					<a
						href="/portfolio/experience"
						class="button_primary text-lg font-bold px-8 py-3"
					>
						View Experience
					</a>
				</div>
			</div>
			<div class="absolute bottom-10 left-1/2 -translate-x-1/2 z-20">
				<a
					class="animate-bounce"
					href="#about"
					aria-label="Scroll to about section"
				>
					<svg
						class="h-8 w-8 text-text-secondary hover:text-primary-color transition-colors"
						fill="none"
						stroke="currentColor"
						viewBox="0 0 24 24"
						xmlns="http://www.w3.org/2000/svg"
					>
						<path
							d="M19 9l-7 7-7-7"
							stroke-linecap="round"
							stroke-linejoin="round"
							stroke-width="2"></path>
					</svg>
					<span class="sr-only">Scroll to about section</span>
				</a>
			</div>
		</section>
	</main>

	<!-- Profile Guide Section -->
	<section
		class="py-12 px-4 sm:px-6 lg:px-8 bg-gradient-to-r from-blue-500/10 to-green-500/10 border-y border-gray-700/50"
	>
		<div class="container mx-auto max-w-4xl">
			<div
				class="flex flex-col md:flex-row items-center justify-between gap-8"
			>
				<div class="flex-1">
					<h3
						class="text-xl font-semibold mb-3 flex items-center gap-2"
					>
						<svg
							class="w-6 h-6 text-blue-400"
							fill="none"
							stroke="currentColor"
							viewBox="0 0 24 24"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
							></path>
						</svg>
						Switch Profiles
					</h3>
					<p class="text-text-secondary mb-4">
						Switch to the Developer profile by clicking the <span
							class="font-semibold text-white"
							>profile icon button</span
						> in the bottom-left corner to toggle between portfolios.
					</p>
					<div class="flex flex-wrap gap-4">
						<div class="flex items-center gap-2">
							<span
								class="px-3 py-1 bg-blue-500/20 text-blue-400 border border-blue-500/30 rounded-full text-sm font-medium"
								>üñ•Ô∏è Currently: IT Support</span
							>
						</div>
						<div class="flex items-center gap-2">
							<span
								class="px-3 py-1 bg-green-500/20 text-green-400 border border-green-500/30 rounded-full text-sm font-medium"
								>üíª Available: Developer</span
							>
						</div>
					</div>
				</div>
				<div class="flex-shrink-0">
					<div
						class="w-20 h-20 bg-gradient-to-br from-gray-700 to-gray-800 rounded-full border-2 border-dashed border-gray-600 flex items-center justify-center relative group"
					>
						<svg
							class="w-10 h-10 text-gray-400 group-hover:text-white transition-colors"
							fill="currentColor"
							viewBox="0 0 24 24"
						>
							<path
								d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"
							></path>
						</svg>
						<div
							class="absolute -top-2 -right-2 w-6 h-6 bg-blue-500 rounded-full border-2 border-gray-900 flex items-center justify-center"
						>
							<svg
								class="w-3 h-3 text-white"
								fill="currentColor"
								viewBox="0 0 20 20"
							>
								<path
									d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L9 4.414V16a1 1 0 102 0V4.414l6.293 6.293a1 1 0 001.414-1.414l-7-7z"
								></path>
							</svg>
						</div>
					</div>
					<p class="text-xs text-gray-500 text-center mt-2">
						Profile Button
					</p>
				</div>
			</div>
		</div>
	</section>

	<section id="about" class="py-24 px-4 sm:px-6 lg:px-8">
		<div class="container mx-auto">
			<div
				class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center fade-in-scroll"
			>
				<div
					class="w-full aspect-square max-w-md mx-auto lg:mx-0 rounded-lg bg-center bg-no-repeat bg-cover"
					style={`background-image: url("${import.meta.env.BASE_URL}assets/profile.webp")`}
				>
				</div>
				<div class="text-left">
					<h2 class="text-3xl font-bold mb-4">About Me</h2>
					<p class="text-lg text-text-secondary leading-relaxed mb-6">
						I am an IT undergraduate at Universiti Tun Hussein Onn
						Malaysia with hands-on experience in technical support,
						network administration, and infrastructure management. I
						thrive on solving IT problems, optimizing systems, and
						delivering reliable solutions.
					</p>
					<a
						href={import.meta.env.BASE_URL + "about"}
						class="button_primary">More About Me</a
					>
				</div>
			</div>
		</div>
	</section>

	<!-- IT Support Focus Section -->
	<section
		id="what-i-do"
		class="py-24 px-4 sm:px-6 lg:px-8 bg-[var(--accent-color)]/20"
	>
		<div class="container mx-auto">
			<h2 class="text-3xl font-bold text-center mb-12 fade-in-scroll">
				IT Support Expertise
			</h2>
			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
				<div class="card text-center fade-in-scroll">
					<div class="mb-4">
						<svg
							class="w-12 h-12 mx-auto text-[var(--primary-color)]"
							fill="none"
							stroke="currentColor"
							viewBox="0 0 24 24"
							xmlns="http://www.w3.org/2000/svg"
							><path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M9.75 17L9 20m0 0l-.75 3M9 20H5m15-5h-3.75M15 5h-3m0 0h-3m3 0V2m0 3H6m0 0h-.75m.75 0l-.75-3M19 11l3-.75m0 0l.75-3M22 11h-3m0 0v3m0-3V8"
							></path></svg
						>
					</div>
					<h3 class="text-xl font-semibold mb-2">
						System Administration
					</h3>
					<p class="text-text-secondary">
						Windows & Linux server management, user accounts, and
						system optimization.
					</p>
				</div>
				<div class="card text-center fade-in-scroll">
					<div class="mb-4">
						<svg
							class="w-12 h-12 mx-auto text-[var(--primary-color)]"
							fill="none"
							stroke="currentColor"
							viewBox="0 0 24 24"
							xmlns="http://www.w3.org/2000/svg"
							><path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.658 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"
							></path></svg
						>
					</div>
					<h3 class="text-xl font-semibold mb-2">Networking</h3>
					<p class="text-text-secondary">
						Network configuration, VPN setup, firewall management,
						and troubleshooting.
					</p>
				</div>
				<div class="card text-center fade-in-scroll">
					<div class="mb-4">
						<svg
							class="w-12 h-12 mx-auto text-[var(--primary-color)]"
							fill="none"
							stroke="currentColor"
							viewBox="0 0 24 24"
							xmlns="http://www.w3.org/2000/svg"
							><path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"
							></path></svg
						>
					</div>
					<h3 class="text-xl font-semibold mb-2">
						Security & Compliance
					</h3>
					<p class="text-text-secondary">
						Access control, security patching, and compliance
						monitoring.
					</p>
				</div>
			</div>
		</div>
	</section>

	<!-- IT Support Projects Section -->
	<section
		id="projects"
		class="py-24 px-4 sm:px-6 lg:px-8 bg-[var(--accent-color)]/20"
	>
		<div class="container mx-auto">
			<h2 class="text-3xl font-bold text-center mb-12 fade-in-scroll">
				Featured IT Support Projects
			</h2>
			<div class="projects-grid">
				<!-- Project: PC Setup Guide -->
				<div
					class="project-card fade-in-scroll"
					data-category="documentation"
				>
					<div class="project-image-container">
						<div
							class="w-full h-full bg-gradient-to-br from-blue-500/20 to-cyan-500/20 rounded-lg flex items-center justify-center border border-blue-500/30"
						>
							<div class="text-center">
								<div
									class="w-16 h-16 bg-blue-500/20 rounded-full flex items-center justify-center mx-auto mb-2"
								>
									<svg
										class="w-8 h-8 text-blue-400"
										fill="none"
										stroke="currentColor"
										viewBox="0 0 24 24"
									>
										<path
											stroke-linecap="round"
											stroke-linejoin="round"
											stroke-width="2"
											d="M9.75 17L9 20m0 0l-.75 3M9 20H5m15-5h-3.75M15 5h-3m0 0h-3m3 0V2m0 3H6m0 0h-.75m.75 0l-.75-3M19 11l3-.75m0 0l.75-3M22 11h-3m0 0v3m0-3V8"
										></path>
									</svg>
								</div>
								<h4 class="text-sm font-bold text-blue-400">
									PC Setup
								</h4>
							</div>
						</div>
					</div>
					<div class="project-card-content">
						<div class="project-header">
							<h3 class="project-title">
								Windows PC Setup & Configuration Guide
							</h3>
							<div class="project-badges">
								<span class="project-badge documentation"
									>Documentation</span
								>
							</div>
						</div>
						<p class="project-description mb-4">
							Complete step-by-step guide for setting up and
							configuring Windows workstations with best
							practices.
						</p>
						<div class="project-actions">
							<a
								href={import.meta.env.BASE_URL +
									"projects/pc-setup-guide"}
								class="project-action-button primary"
							>
								<svg
									class="w-4 h-4"
									fill="none"
									stroke="currentColor"
									viewBox="0 0 24 24"
								>
									<path
										stroke-linecap="round"
										stroke-linejoin="round"
										stroke-width="2"
										d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"
									></path>
									<path
										stroke-linecap="round"
										stroke-linejoin="round"
										stroke-width="2"
										d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"
									></path>
								</svg>
								View Guide
							</a>
						</div>
					</div>
				</div>

				<!-- Project: Windows Troubleshooting -->
				<div
					class="project-card fade-in-scroll"
					data-category="documentation"
				>
					<div class="project-image-container">
						<div
							class="w-full h-full bg-gradient-to-br from-blue-500/20 to-indigo-500/20 rounded-lg flex items-center justify-center border border-blue-500/30"
						>
							<div class="text-center">
								<div
									class="w-16 h-16 bg-blue-500/20 rounded-full flex items-center justify-center mx-auto mb-2"
								>
									<svg
										class="w-8 h-8 text-blue-400"
										fill="none"
										stroke="currentColor"
										viewBox="0 0 24 24"
									>
										<path
											stroke-linecap="round"
											stroke-linejoin="round"
											stroke-width="2"
											d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"
										></path>
									</svg>
								</div>
								<h4 class="text-sm font-bold text-blue-400">
									Troubleshooting
								</h4>
							</div>
						</div>
					</div>
					<div class="project-card-content">
						<div class="project-header">
							<h3 class="project-title">
								Windows Troubleshooting & Support Guide
							</h3>
							<div class="project-badges">
								<span class="project-badge documentation"
									>Documentation</span
								>
							</div>
						</div>
						<p class="project-description mb-4">
							Comprehensive guide to diagnosing and resolving
							common Windows problems systematically.
						</p>
						<div class="project-actions">
							<a
								href={import.meta.env.BASE_URL +
									"projects/windows-troubleshooting-guide"}
								class="project-action-button primary"
							>
								<svg
									class="w-4 h-4"
									fill="none"
									stroke="currentColor"
									viewBox="0 0 24 24"
								>
									<path
										stroke-linecap="round"
										stroke-linejoin="round"
										stroke-width="2"
										d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"
									></path>
									<path
										stroke-linecap="round"
										stroke-linejoin="round"
										stroke-width="2"
										d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"
									></path>
								</svg>
								View Guide
							</a>
						</div>
					</div>
				</div>

				<!-- Project: Network Setup -->
				<div
					class="project-card fade-in-scroll"
					data-category="documentation"
				>
					<div class="project-image-container">
						<div
							class="w-full h-full bg-gradient-to-br from-blue-500/20 to-sky-500/20 rounded-lg flex items-center justify-center border border-blue-500/30"
						>
							<div class="text-center">
								<div
									class="w-16 h-16 bg-blue-500/20 rounded-full flex items-center justify-center mx-auto mb-2"
								>
									<svg
										class="w-8 h-8 text-blue-400"
										fill="none"
										stroke="currentColor"
										viewBox="0 0 24 24"
									>
										<path
											stroke-linecap="round"
											stroke-linejoin="round"
											stroke-width="2"
											d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.658 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"
										></path>
									</svg>
								</div>
								<h4 class="text-sm font-bold text-blue-400">
									Network Setup
								</h4>
							</div>
						</div>
					</div>
					<div class="project-card-content">
						<div class="project-header">
							<h3 class="project-title">
								Network Setup, VPN & Remote Access Guide
							</h3>
							<div class="project-badges">
								<span class="project-badge documentation"
									>Documentation</span
								>
							</div>
						</div>
						<p class="project-description mb-4">
							Detailed guide for network configuration, VPN
							implementation, and remote access solutions.
						</p>
						<div class="project-actions">
							<a
								href={import.meta.env.BASE_URL +
									"projects/network-setup-guide"}
								class="project-action-button primary"
							>
								<svg
									class="w-4 h-4"
									fill="none"
									stroke="currentColor"
									viewBox="0 0 24 24"
								>
									<path
										stroke-linecap="round"
										stroke-linejoin="round"
										stroke-width="2"
										d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"
									></path>
									<path
										stroke-linecap="round"
										stroke-linejoin="round"
										stroke-width="2"
										d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"
									></path>
								</svg>
								View Guide
							</a>
						</div>
					</div>
				</div>
			</div>
			<div class="text-center mt-12 fade-in-scroll">
				<a
					href={import.meta.env.BASE_URL + "role-it-support/projects"}
					class="button_secondary">View All IT Projects</a
				>
			</div>
		</div>
	</section>

	<section class="py-24 px-4 sm:px-6 lg:px-8">
		<div class="container mx-auto text-center fade-in-scroll">
			<h2 class="text-3xl font-bold mb-6">Ready to Collaborate?</h2>
			<p class="text-lg text-text-secondary mb-8 max-w-3xl mx-auto">
				Let's discuss IT infrastructure and support solutions
			</p>
			<div class="flex flex-wrap justify-center gap-4">
				<a href="/portfolio/contact" class="button_primary"
					>Get In Touch</a
				>
				<a href="/portfolio/about" class="button_secondary"
					>Learn More</a
				>
			</div>
		</div>
	</section>
</Layout>

<script>
	localStorage.setItem("selectedProfile", "it-support");
</script>
