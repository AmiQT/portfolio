---
import Layout from "../../layouts/Layout.astro";
import { profile } from "../../data/devops-engineer.ts";

const baseUrl = import.meta.env.BASE_URL;
---

<Layout
    title={`${profile.name} - DevOps Contact`}
    description="DevOps Engineer contact page for collaboration and infrastructure opportunities."
    canonical="/role-devops-engineer/contact/"
>
    <main class="min-h-screen bg-gradient-to-br from-gray-900 via-black to-gray-900 text-green-400">
        <section class="py-20 px-4 sm:px-6 lg:px-8">
            <div class="max-w-5xl mx-auto">
                <div class="bg-gray-950 border-2 border-green-500/30 rounded-lg shadow-2xl shadow-green-500/20 overflow-hidden">
                    <div class="bg-gray-800 px-4 py-2 flex items-center gap-2 border-b border-green-500/30">
                        <div class="flex gap-2">
                            <div class="w-3 h-3 rounded-full bg-red-500"></div>
                            <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
                            <div class="w-3 h-3 rounded-full bg-green-500"></div>
                        </div>
                        <span class="text-gray-400 text-sm ml-4 font-mono">ami@devops:~/contact$</span>
                    </div>

                    <div class="p-6 sm:p-8 font-mono">
                        <h1 class="text-3xl sm:text-4xl font-bold text-white mb-4">Contact DevOps Engineer</h1>
                        <p class="text-gray-300 mb-8">
                            Ready to discuss infrastructure, automation, or deployment pipelines. Use the channels below to connect.
                        </p>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div class="bg-gray-900 border border-green-500/30 rounded-lg p-5">
                                <div class="flex items-center gap-3 mb-2">
                                    <svg class="w-5 h-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8m-18 8h18a2 2 0 002-2V6a2 2 0 00-2-2H3a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                                    </svg>
                                    <span class="text-white font-semibold">Email</span>
                                </div>
                                <p class="text-gray-300">noor.azami@example.com</p>
                                <a
                                    href={baseUrl + "contact"}
                                    class="inline-flex items-center gap-2 text-green-400 hover:text-green-300 text-sm mt-3"
                                >
                                    Open contact form
                                </a>
                            </div>

                            <div class="bg-gray-900 border border-green-500/30 rounded-lg p-5">
                                <div class="flex items-center gap-3 mb-2">
                                    <svg class="w-5 h-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 8a6 6 0 016 6v7H2v-7a6 6 0 016-6h8zm-4-4a4 4 0 100 8 4 4 0 000-8z"></path>
                                    </svg>
                                    <span class="text-white font-semibold">LinkedIn</span>
                                </div>
                                <a
                                    href="https://www.linkedin.com/in/noor-azami/"
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="text-green-400 hover:text-green-300"
                                >
                                    linkedin.com/in/noor-azami
                                </a>
                            </div>

                            <div class="bg-gray-900 border border-green-500/30 rounded-lg p-5">
                                <div class="flex items-center gap-3 mb-2">
                                    <svg class="w-5 h-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
                                    </svg>
                                    <span class="text-white font-semibold">GitHub</span>
                                </div>
                                <a
                                    href={profile.github}
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="text-green-400 hover:text-green-300"
                                >
                                    {profile.github.replace("https://", "")}
                                </a>
                            </div>

                            <div class="bg-gray-900 border border-green-500/30 rounded-lg p-5">
                                <div class="flex items-center gap-3 mb-2">
                                    <svg class="w-5 h-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5s3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18s-3.332.477-4.5 1.253"></path>
                                    </svg>
                                    <span class="text-white font-semibold">Resume</span>
                                </div>
                                <a
                                    href={baseUrl + profile.resume}
                                    download
                                    class="text-green-400 hover:text-green-300"
                                >
                                    Download resume
                                </a>
                            </div>
                        </div>

                        <div class="mt-8 flex flex-wrap gap-3">
                            <a
                                href={baseUrl + "role-devops-engineer/"}
                                class="px-5 py-2 bg-gray-800 hover:bg-gray-700 text-green-400 border border-green-500/50 font-semibold rounded"
                            >
                                Back to DevOps Home
                            </a>
                            <a
                                href={baseUrl + "roles"}
                                class="px-5 py-2 bg-gray-900 hover:bg-gray-800 text-gray-300 border border-gray-600 rounded"
                            >
                                Switch Profile
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
</Layout>
