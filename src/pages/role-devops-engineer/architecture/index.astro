---
import Layout from "../../../layouts/Layout.astro";
import { profile, featuredProjects } from "../../../data/devops-engineer.ts";

const baseUrl = import.meta.env.BASE_URL;
const architectureProjects = featuredProjects.filter((project) => project.link && project.link !== "#");
const techTags = Array.from(
    new Set(architectureProjects.flatMap((project) => project.tech || []))
).sort((a, b) => a.localeCompare(b));
---

<Layout
    title={`${profile.name} - DevOps Architectures`}
    description="All DevOps architecture breakdowns for infrastructure projects."
    canonical="/role-devops-engineer/architecture/"
>
    <main class="min-h-screen bg-gradient-to-br from-gray-900 via-black to-gray-900 text-green-400">
        <section class="py-20 px-4 sm:px-6 lg:px-8">
            <div class="max-w-6xl mx-auto">
                <div class="bg-gray-950 border-2 border-green-500/30 rounded-lg shadow-2xl shadow-green-500/20 overflow-hidden">
                    <div class="bg-gray-800 px-4 py-2 flex items-center gap-2 border-b border-green-500/30">
                        <div class="flex gap-2">
                            <div class="w-3 h-3 rounded-full bg-red-500"></div>
                            <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
                            <div class="w-3 h-3 rounded-full bg-green-500"></div>
                        </div>
                        <span class="text-gray-400 text-sm ml-4 font-mono">ami@devops:~/architecture$</span>
                    </div>

                    <div class="p-6 sm:p-8 font-mono">
                        <h1 class="text-3xl sm:text-4xl font-bold text-white mb-4">DevOps Architectures</h1>
                        <p class="text-gray-300 mb-10">
                            Explore detailed infrastructure flows, deployment strategies, and scalability notes for each project.
                        </p>

                        <div class="bg-gray-900 border border-green-500/30 rounded-lg p-4 mb-8">
                            <div class="flex flex-col lg:flex-row gap-4 lg:items-center">
                                <div class="flex-1">
                                    <label class="text-xs text-gray-400 font-mono">SEARCH</label>
                                    <div class="mt-2 relative">
                                        <input
                                            id="architecture-search"
                                            type="text"
                                            placeholder="Search by title, type, or keyword..."
                                            class="w-full bg-gray-950 border border-green-500/30 rounded-md px-4 py-2 text-sm text-gray-200 placeholder:text-gray-500 focus:outline-none focus:border-green-500/60"
                                        />
                                    </div>
                                </div>
                                <div class="flex-1">
                                    <label class="text-xs text-gray-400 font-mono">FILTER BY TECH</label>
                                    <div class="mt-2 flex flex-wrap gap-2" id="architecture-filters">
                                        <button
                                            type="button"
                                            data-tag="all"
                                            class="filter-btn px-3 py-1 text-xs font-mono border border-green-500/40 rounded text-green-400 bg-green-500/10"
                                        >
                                            All
                                        </button>
                                        {techTags.map((tag) => (
                                            <button
                                                type="button"
                                                data-tag={tag}
                                                class="filter-btn px-3 py-1 text-xs font-mono border border-gray-700 rounded text-gray-300 hover:border-green-500/40 hover:text-green-300"
                                            >
                                                {tag}
                                            </button>
                                        ))}
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6" id="architecture-grid">
                            {architectureProjects.map((project) => (
                                <div
                                    class="architecture-card bg-gray-900 border border-green-500/30 rounded-lg p-6 hover:border-green-500/60 transition-all"
                                    data-title={project.title}
                                    data-type={project.type}
                                    data-description={project.description}
                                    data-tech={(project.tech || []).join(",").toLowerCase()}
                                >
                                    <div class="flex items-start gap-3 mb-3">
                                        <div class="w-10 h-10 rounded-md bg-green-500/10 border border-green-500/30 flex items-center justify-center">
                                            <svg class="w-5 h-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16"></path>
                                            </svg>
                                        </div>
                                        <div>
                                            <h2 class="text-xl font-bold text-white">{project.title}</h2>
                                            <span class="text-green-400 text-xs font-mono">{project.type}</span>
                                        </div>
                                    </div>

                                    <p class="text-gray-300 text-sm mb-4">
                                        {project.description}
                                    </p>

                                    <div class="flex flex-wrap gap-2 mb-4">
                                        {(project.tech || []).map((tech) => (
                                            <span class="px-2 py-1 text-[10px] font-mono text-green-300 bg-green-500/10 border border-green-500/30 rounded">
                                                {tech}
                                            </span>
                                        ))}
                                    </div>

                                    <a
                                        href={baseUrl + project.link}
                                        class="inline-flex items-center gap-2 text-green-400 hover:text-green-300 font-mono text-sm transition-colors"
                                    >
                                        <span>â†’ Open Architecture Page</span>
                                    </a>
                                </div>
                            ))}
                        </div>

                        <div id="architecture-empty" class="hidden text-center text-gray-400 text-sm font-mono mt-10">
                            No architecture found. Try another search or filter.
                        </div>

                        <div class="mt-10 flex flex-wrap gap-3">
                            <a
                                href={baseUrl + "role-devops-engineer/"}
                                class="px-5 py-2 bg-gray-800 hover:bg-gray-700 text-green-400 border border-green-500/50 font-semibold rounded"
                            >
                                Back to DevOps Home
                            </a>
                            <a
                                href={baseUrl + "role-devops-engineer/experience"}
                                class="px-5 py-2 bg-green-500 hover:bg-green-600 text-black font-semibold rounded"
                            >
                                View DevOps Experience
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
</Layout>

<script>
    const searchInput = document.getElementById("architecture-search");
    const filterContainer = document.getElementById("architecture-filters");
    const cards = Array.from(document.querySelectorAll(".architecture-card"));
    const emptyState = document.getElementById("architecture-empty");

    let activeTag = "all";

    function filterCards() {
        const query = (searchInput?.value || "").toLowerCase().trim();
        let visibleCount = 0;

        cards.forEach((card) => {
            const title = (card.getAttribute("data-title") || "").toLowerCase();
            const type = (card.getAttribute("data-type") || "").toLowerCase();
            const description = (card.getAttribute("data-description") || "").toLowerCase();
            const tech = (card.getAttribute("data-tech") || "").toLowerCase();

            const matchesQuery = !query || title.includes(query) || type.includes(query) || description.includes(query) || tech.includes(query);
            const matchesTag = activeTag === "all" || tech.includes(activeTag.toLowerCase());

            if (matchesQuery && matchesTag) {
                card.classList.remove("hidden");
                visibleCount += 1;
            } else {
                card.classList.add("hidden");
            }
        });

        if (emptyState) {
            emptyState.classList.toggle("hidden", visibleCount !== 0);
        }
    }

    if (searchInput) {
        searchInput.addEventListener("input", filterCards);
    }

    if (filterContainer) {
        filterContainer.addEventListener("click", (event) => {
            const target = event.target;
            if (!(target instanceof HTMLElement)) return;
            const tag = target.getAttribute("data-tag");
            if (!tag) return;

            activeTag = tag;

            const buttons = filterContainer.querySelectorAll(".filter-btn");
            buttons.forEach((btn) => {
                btn.classList.remove("bg-green-500/10", "text-green-400", "border-green-500/40");
                btn.classList.add("text-gray-300", "border-gray-700");
            });

            target.classList.add("bg-green-500/10", "text-green-400", "border-green-500/40");
            target.classList.remove("text-gray-300", "border-gray-700");

            filterCards();
        });
    }
</script>
