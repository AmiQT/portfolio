---
import Layout from "../../../layouts/Layout.astro";
import { profile } from "../../../data/devops-engineer.ts";

const baseUrl = import.meta.env.BASE_URL;
const architectureFlow = [
    "React Frontend -> Vercel Edge Network",
    "FastAPI Backend -> Railway",
    "Supabase -> Managed PostgreSQL",
    "Gemini API -> AI Processing",
    "GitHub Actions -> CI/CD Delivery"
];

const infraHighlights = [
    "Decoupled frontend and backend scaling",
    "Zero-downtime deployments with Railway",
    "Global CDN distribution via Vercel",
    "Environment-specific secrets and configs",
    "Monitoring hooks for service health"
];
---

<Layout
    title={`${profile.name} - Resume AI Architecture`}
    description="DevOps architecture breakdown for the Resume AI SaaS platform."
    canonical="/role-devops-engineer/architecture/ai-resume-builder/"
>
    <main class="min-h-screen bg-gradient-to-br from-gray-900 via-black to-gray-900 text-green-400">
        <section class="py-20 px-4 sm:px-6 lg:px-8">
            <div class="max-w-5xl mx-auto">
                <div class="bg-gray-950 border-2 border-green-500/30 rounded-lg shadow-2xl shadow-green-500/20 overflow-hidden">
                    <div class="bg-gray-800 px-4 py-2 flex items-center gap-2 border-b border-green-500/30">
                        <div class="flex gap-2">
                            <div class="w-3 h-3 rounded-full bg-red-500"></div>
                            <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
                            <div class="w-3 h-3 rounded-full bg-green-500"></div>
                        </div>
                        <span class="text-gray-400 text-sm ml-4 font-mono">ami@devops:~/architecture$</span>
                    </div>

                    <div class="p-6 sm:p-8 font-mono">
                        <h1 class="text-3xl sm:text-4xl font-bold text-white mb-4">
                            Resume AI Architecture
                        </h1>
                        <p class="text-gray-300 mb-8">
                            Scalable SaaS blueprint with independent services, global delivery, and automated releases.
                        </p>

                        <div class="bg-black/50 border border-green-500/20 rounded-lg p-5 mb-8">
                            <h2 class="text-xl text-white mb-4">Architecture Flow</h2>
                            <ol class="space-y-2 text-gray-300">
                                {architectureFlow.map((step, index) => (
                                    <li class="flex items-start gap-3">
                                        <span class="text-green-400">{index + 1}.</span>
                                        <span>{step}</span>
                                    </li>
                                ))}
                            </ol>
                        </div>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-8">
                            {infraHighlights.map((item) => (
                                <div class="bg-gray-900 border border-green-500/30 rounded-lg p-4 text-gray-300">
                                    <div class="flex items-start gap-3">
                                        <svg class="w-4 h-4 text-green-400 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                        </svg>
                                        <span>{item}</span>
                                    </div>
                                </div>
                            ))}
                        </div>

                        <div class="flex flex-wrap gap-3">
                            <a
                                href={baseUrl + "role-devops-engineer/"}
                                class="px-5 py-2 bg-gray-800 hover:bg-gray-700 text-green-400 border border-green-500/50 font-semibold rounded"
                            >
                                Back to DevOps Home
                            </a>
                            <a
                                href={baseUrl + "role-devops-engineer/experience"}
                                class="px-5 py-2 bg-green-500 hover:bg-green-600 text-black font-semibold rounded"
                            >
                                View DevOps Experience
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
</Layout>
