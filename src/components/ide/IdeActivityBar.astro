<aside class="w-12 bg-gray-100 dark:bg-[#161b22] border-r border-gray-200 dark:border-gray-800 flex flex-col items-center py-4 gap-6 z-50 hidden md:flex transition-colors duration-300">
  <div class="p-2 cursor-pointer text-gray-900 dark:text-white border-l-2 border-orange-500" title="Explorer" data-action="explorer">📂</div>
  <div class="p-2 cursor-pointer text-gray-500 hover:text-gray-900 dark:hover:text-white transition-colors" title="Search" data-action="search">🔍</div>
  <div class="p-2 cursor-pointer text-gray-500 hover:text-gray-900 dark:hover:text-white transition-colors" title="Source Control" data-action="source-control">🌳</div>
  <div class="p-2 cursor-pointer text-gray-500 hover:text-gray-900 dark:hover:text-white transition-colors" title="Extensions" data-action="extensions">🧩</div>
  
  <!-- Theme Toggle Button -->
  <button id="theme-toggle-btn" aria-label="Toggle Theme" title="Toggle Dark/Light Mode" class="p-2 cursor-pointer text-gray-500 hover:text-gray-900 dark:hover:text-white transition-colors">
    <!-- Sun Icon (for Dark Mode) -->
    <svg id="sun-icon" class="w-5 h-5 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"></path></svg>
    <!-- Moon Icon (for Light Mode) -->
    <svg id="moon-icon" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"></path></svg>
  </button>
  
  <!-- Profile Switcher Button -->
  <button id="profile-toggle-btn" aria-label="Change profile" title="Current: Software Developer&#10;Click to change profile" class="mt-auto flex flex-col items-center gap-1 p-2 cursor-pointer text-gray-500 hover:text-gray-900 dark:hover:text-white transition-colors group">
    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
        <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
        <circle cx="12" cy="7" r="4"></circle>
    </svg>
    <span class="text-[10px] font-medium">Role</span>
  </button>

  <a href={import.meta.env.BASE_URL + "home-it-support"} class="p-2 cursor-pointer text-gray-500 hover:text-gray-900 dark:hover:text-white transition-colors" title="Settings">⚙️</a>
</aside>
