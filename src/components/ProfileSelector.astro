---
// Profile selection modal - displays on first visit
// This component handles profile selection and sets context
---

<div id="profile-modal" class="fixed inset-0 bg-black/80 backdrop-blur-sm z-50 flex items-center justify-center p-4" style="display: none;">
    <div class="bg-gray-900 border border-gray-700 rounded-xl shadow-2xl max-w-2xl w-full max-h-[90vh] overflow-y-auto">
        <!-- Header -->
        <div class="sticky top-0 bg-gradient-to-b from-gray-900 via-gray-900 to-transparent p-8 border-b border-gray-700">
            <h1 class="text-3xl font-bold mb-2">Welcome to My Portfolio</h1>
            <p class="text-text-secondary">Choose your profile to see a customized experience</p>
        </div>

        <!-- Content -->
        <div class="p-8">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
                <!-- IT Support Option -->
                <button 
                    id="select-it-support" 
                    class="profile-option group relative h-full text-left p-6 border-2 border-gray-700/50 rounded-xl hover:border-blue-500 hover:bg-blue-500/5 transition-all duration-300 hover:shadow-lg hover:shadow-blue-500/20"
                    data-profile="it-support"
                >
                    <!-- Hover accent line -->
                    <div class="absolute top-0 left-0 right-0 h-1 bg-gradient-to-r from-blue-500 to-blue-500/50 rounded-t-xl opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                    
                    <!-- Icon Box -->
                    <div class="w-16 h-16 bg-blue-500/15 rounded-xl flex items-center justify-center mb-4 group-hover:bg-blue-500/25 transition-colors">
                        <svg class="w-8 h-8 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        </svg>
