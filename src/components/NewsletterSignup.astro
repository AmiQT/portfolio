<div class="newsletter-signup bg-gradient-to-r from-[var(--primary-color)]/10 to-[var(--accent-color)]/20 rounded-lg p-8 border border-[var(--primary-color)]/20">
    <div class="text-center">
        <h3 class="text-2xl font-bold mb-2">Stay Updated</h3>
        <p class="text-text-secondary mb-6">Get notified about new projects, tech insights, and career opportunities.</p>
        
        <form id="newsletter-form" class="max-w-md mx-auto space-y-4">
            <div>
                <input 
                    type="email" 
                    id="newsletter-email" 
                    placeholder="Enter your email address"
                    class="w-full px-4 py-3 rounded-lg bg-[var(--card-background)] border border-[var(--border-color)] text-[var(--text-primary)] focus:outline-none focus:ring-2 focus:ring-[var(--primary-color)] focus:border-[var(--primary-color)] transition-colors"
                    required
                />
            </div>
            <button 
                type="submit"
                class="w-full button_primary py-3 flex items-center justify-center gap-2"
            >
                <span id="newsletter-text">Subscribe</span>
                <svg id="newsletter-spinner" class="hidden w-5 h-5 animate-spin" fill="none" viewBox="0 0 24 24">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
            </button>
        </form>
        
        <p class="text-xs text-text-secondary mt-4">No spam, unsubscribe at any time.</p>
        
        <!-- Success/Error Messages -->
        <div id="newsletter-success" class="hidden mt-4 p-3 bg-green-500/20 border border-green-500/50 rounded-lg text-green-300">
            <div class="flex items-center gap-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span>Successfully subscribed! Check your email for confirmation.</span>
            </div>
        </div>
        
        <div id="newsletter-error" class="hidden mt-4 p-3 bg-red-500/20 border border-red-500/50 rounded-lg text-red-300">
            <div class="flex items-center gap-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <span>Something went wrong. Please try again.</span>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('newsletter-form');
    const emailInput = document.getElementById('newsletter-email');
    const submitBtn = form.querySelector('button[type="submit"]');
    const submitText = document.getElementById('newsletter-text');
    const spinner = document.getElementById('newsletter-spinner');
    const successMsg = document.getElementById('newsletter-success');
    const errorMsg = document.getElementById('newsletter-error');

    if (form) {
        form.addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const email = emailInput.value.trim();
            if (!email) return;

            // Show loading state
            submitBtn.disabled = true;
            submitText.textContent = 'Subscribing...';
            spinner.classList.remove('hidden');
            successMsg.classList.add('hidden');
            errorMsg.classList.add('hidden');

            try {
                // For demo purposes, simulate API call
                await new Promise(resolve => setTimeout(resolve, 1000));
                
                // Here you would typically send to your newsletter service
                // For now, we'll just show success
                successMsg.classList.remove('hidden');
                form.reset();
                
            } catch (error) {
                errorMsg.classList.remove('hidden');
            } finally {
                // Reset button state
                submitBtn.disabled = false;
                submitText.textContent = 'Subscribe';
                spinner.classList.add('hidden');
            }
        });
    }
});
</script> 